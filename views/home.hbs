<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/74c0b2949d.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script src="/css/index.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
    <script src="https://smtpjs.com/v3/smtp.js"></script>
    <title>FITNess</title>
</head>
<body>
<header>
        <div class="navigation">
            <ul>
                <li class="list active">
                    <a  onclick="scrollToSection('dashboard')">
                        <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="list">
                    <a onclick="scrollToSection('exersice')">
                        <span class="icon"><ion-icon name="bicycle-outline"></ion-icon></span>
                        <span class="text">Exercise</span>
                    </a>
                </li>
                <li class="list">
                    <a onclick="scrollToSection('workout')">
                        <span class="icon"><ion-icon name="barbell-outline"></ion-icon></span>
                        <span class="text">workout</span>
                    </a>
                </li> 
                <div class="indicator"></div>
            </ul>
        </div>
    </header>
    <section class="dashboard" id="dashboard">
        <form action="/aruth/search" method="post">
            <input type="text" placeholder="Search By date ex.yyyy-mm-dd" name="search" required="">
            <button><i class="fa fa-search"></i></button> 
        </form>
        <div class="output1">
            <h4>Total exersice time</h4>
            {{#each out}}
            <p>{{this.hour}}:{{this.min}}:{{this.sec}}</p>
            {{/each}}
        </div>
        <div class="output2">
            <h4>Total workout time</h4>
            {{#each out1}}
            <p>{{this.hour}}:{{this.min}}:{{this.sec}}</p>
            {{/each}}
        </div>
        <div class="output3">
            <h4>Calories Burned using Exersice</h4>
            {{#each sum}}
            <p>{{this.sum_calories}}</p>
            {{/each}}
        </div>
        <div class="output4">
            <h4>Calories Burned using Workout</h4>
            {{#each sum1}}
            <p>{{this.sum_calories}}</p>
            {{/each}}
        </div>
        <div class="result">
            <div class="table1">
                <table>
                    <thead>
                <tr>
                    <td>ID</td>
                    <td>Exercise Name</td>
                    <td>Starting Time</td>
                    <td>Total Time</td>
                    <td>Calories Burned</td>
                </tr>
            </thead>
            <tbody>
                {{#each ser}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.exersice_name}}</td>
                        <td>{{this.starting_time}}</td></td>
                        <td>{{this.total_time}}</td>
                        <td>{{this.calories}}</td>
                    </tr>
                {{/each}}
            </tbody>
                </table>
            </div>
            <div class="table2">
                <table>
                    <thead>
                        <tr>
                            <td>ID</td>
                            <td>Workout Name</td>
                            <td>Starting Time</td>
                            <td>Total Time</td>
                            <td>Steps</td>
                            <td>Calories Burned</td>
                        </tr>
                    </thead>
                     <tbody>
                        {{#each ser1}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.workout_name}}</td>
                                <td>{{this.starting_time}}</td>
                                <td>{{this.total_time}}</td>
                                <td>{{this.steps}}</td>
                                <td>{{this.calories}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

     </section>



    <section class="exersice" id="exersice">
        <h2>Track Your Exersice here :)</h2>
        <p><a href="/add" class="add">Add record</a></p>
        <div class="table">
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Exercise Name</td>
                    <td>Date</td>
                    <td>Starting Time</td>
                    <td>Total Time</td>
                    <td>Calories Burned</td>
                    <td>Edit</td>
                    <td>Delect</td>
                </tr>
            </thead>
            <tbody>
                {{#each result}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.exersice_name}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.starting_time}}</td></td>
                        <td>{{this.total_time}}</td>
                        <td>{{this.calories}}</td>
                        <td><a class="edit" href="/aruth/edit/{{this.id}}">Edit</a></td>
                        <td><a class="delete" onclick="return confirm('Are you sure you want to delete')" href="/aruth/delete/{{this.id}}">Delete</a></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </section>
    <section class="exersice" id="workout">
        <h2>Track Your workout here :)</h2>
        <p><a href="/addwork" class="add">Add record</a></p>
        <div class="table">
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Workout Name</td>
                    <td>Date</td>
                    <td>Starting Time</td>
                    <td>Total Time</td>
                    <td>Total Steps</td>
                    <td>Calories Burned</td>
                    <td>Edit</td>
                    <td>Delect</td>
                </tr>
            </thead>
            <tbody>
                {{#each result1}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.workout_name}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.starting_time}}</td>
                        <td>{{this.total_time}}</td>
                        <td>{{this.steps}}</td>
                        <td>{{this.calories}}</td>
                        <td><a class="edit" href="/aruth/editwork/{{this.id}}">Edit</a></td>
                        <td><a class="delete" onclick="return confirm('Are you sure you want to delete')" href="/aruth/deletework/{{this.id}}">Delete</a></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </section>
    
</body>
<script>
         const list=document.querySelectorAll('.list');
        function activatelink(){
            list.forEach((item) => item.classList.remove('active'));
            this.classList.add('active');   
        }
        list.forEach((item) => item.addEventListener('click',activatelink));
    </script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</html>